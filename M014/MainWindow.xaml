<Window x:Class="M014.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Das Fenster" Height="450" Width="300" Background="#FF00FFF9"
		WindowStartupLocation="CenterScreen">
    <StackPanel Margin="5">
		<Menu>
			<MenuItem Header="Datei">
				<MenuItem Header="Unterpunkt">
					<MenuItem Header="Unterunterpunkt" Click="MenuItem_Click">
						
					</MenuItem>
				</MenuItem>
			</MenuItem>
		</Menu>
		<Button Click="Button_Click" Content="Ein Button" FontSize="20"/>
		<TextBlock Text="Hallo" Name="TB" TextAlignment="Center" FontSize="28"/>
		<ComboBox Name="CB" SelectionChanged="CB_SelectionChanged"/>
		<ListBox Name="LB" SelectionChanged="LB_SelectionChanged" Margin="0, 10, 0, 0"
				 SelectionMode="Extended"/>
		<CheckBox IsChecked="True" Content="Eine Checkbox"
				  Checked="CheckBox_Checked" Unchecked="CheckBox_Unchecked"/>
		<RadioButton GroupName="RB1"/>
		<RadioButton GroupName="RB1"/>
		<RadioButton GroupName="RB1"/>
		<Separator/>
		<RadioButton GroupName="RB2"/>
		<RadioButton GroupName="RB2"/>
		<TextBox/>
	</StackPanel>
</Window>
